<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="com.mlt.factoryautotest:autoScaleTextViewStyle">@style/autoScaleTextView</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <!-- Standard configuration for the AutoScaleTextView -->
    <style name="autoScaleTextView">
        <!-- some graphical improvements just for the demo. feel free to remove -->
        <item name="@android:attr/background">@drawable/border</item>
        <item name="@android:attr/padding">5dp</item>
        <item name="@android:attr/gravity">center</item>
        
        <!-- use the next line to alter the minimum text size (uncomment first)-->
        <!-- <item name="@attr/minTextSize">10dp</item> -->
	</style>

</resources>
